{
    "name": "grafite/scaffold",
    "type": "project",
    "description": "An opinionated Laravel boilerplate.",
    "keywords": [
        "boilerplate",
        "laravel",
        "grafite"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "consoletvs/charts": "^6.5.4",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "^4.0",
        "grafite/database": "^2.0",
        "grafite/formmaker": "^2.9",
        "intervention/image": "^2.5",
        "laravel/cashier": "^10.1",
        "laravel/framework": "^7.0",
        "laravel/helpers": "^1.1",
        "laravel/ui": "^2.0",
        "lasserafn/php-initial-avatar-generator": "^4.0",
        "tightenco/ziggy": "^0.8.1"
    },
    "require-dev": {
        "facade/ignition": "^2.0",
        "fzaninotto/faker": "^1.9",
        "laravel/dusk": "^5.9",
        "mockery/mockery": "^1.3",
        "nunomaduro/collision": "^4.1",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/Helpers/ActivityHelper.php",
            "app/Helpers/NotificationHelper.php",
            "app/Helpers/UserInterfaceHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check-style": "php-cs-fixer fix --dry-run",
        "fix-style": "php-cs-fixer fix"
    }
}
